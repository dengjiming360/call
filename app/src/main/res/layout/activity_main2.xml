<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bgp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mus"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lin1"
            android:background="@drawable/music"></ImageButton>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vol"
            app:layout_constraintBottom_toTopOf="@id/lin1"
            app:layout_constraintLeft_toRightOf="@id/mus"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/volume"></ImageButton>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choosemusic"
            app:layout_constraintBottom_toTopOf="@id/lin1"
            app:layout_constraintLeft_toRightOf="@id/vol"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/erjis"></ImageButton>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/lin1"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:orientation="vertical">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="快算24点"
    android:textSize="54dp"
    android:id="@+id/tv1"
    android:layout_gravity="center"
    android:gravity="center"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    ></TextView>
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始游戏"
                android:id="@+id/begin"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/buttons"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                ></Button>
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  最高分  "
                android:id="@+id/highscore"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/buttons"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/begin"
                ></Button>
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出游戏"
                android:id="@+id/exit"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/buttons"
                app:layout_constraintTop_toBottomOf="@id/highscore"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                ></Button>
  </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
