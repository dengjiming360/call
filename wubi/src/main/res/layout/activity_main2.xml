<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#00FFFF"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="72dp"
            android:background="#FFA500"
            android:id="@+id/island"
            android:layout_height="match_parent"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cannon"
            android:id="@+id/cannon1"
            android:layout_centerVertical="true"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cannon"
            android:id="@+id/cannon2"
            android:layout_centerVertical="true"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cannon"
            android:id="@+id/cannon3"
            android:layout_centerVertical="true"></ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel4"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cannon"
            android:id="@+id/cannon4"
            android:layout_centerVertical="true"></ImageView>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="得分：1200000000000000"
                    android:textStyle="bold"
                    android:id="@+id/score"
                    android:textColor="#005737"
                    android:textSize="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生命：3"
                    android:textStyle="bold"
                    android:textColor="#ff0000"
                    android:id="@+id/life"
                    android:textSize="28dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    ></TextView>
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="22dp"
            android:id="@+id/one"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="2"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:id="@+id/two"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="3"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/three"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:text="4"
            android:textStyle="bold"
            android:textSize="22dp"
            android:id="@+id/four"
            android:textColor="#000000"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="5"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:id="@+id/five"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="←"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="22dp"
            android:id="@+id/backspace"
            android:textColor="#000000"
            android:background="@drawable/shape"></Button>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="S"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="22dp"
            android:textColor="#000000"
            android:id="@+id/shoot"
            android:background="@drawable/shape"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="数字："></TextView>
        <EditText
            android:layout_width="32dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:id="@+id/num"
            android:textSize="22dp"
            android:textColor="#000000"
            android:text="55"
            android:layout_marginLeft="5dp"
            android:background="#FF00FF"
            android:editable="false"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="五笔代码："></TextView>
        <EditText
            android:layout_width="96dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:id="@+id/daima"
            android:textSize="22dp"
            android:textColor="#000000"
            android:editable="false"
            android:text="GGGG"
            android:layout_marginLeft="5dp"
            android:background="#F9CCE2"
            ></EditText>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>